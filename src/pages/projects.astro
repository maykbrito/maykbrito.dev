---
import Header from "@/components/Header.astro";
import config from "@/data/config";
import items from "@/data/projects.ts";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title={config.head.title}
  description={config.head.description}
  image={config.head.image}
>
  <div class="page max-w-lg mx-auto px-2 md:px-0 antialiased">
    <Header />

    <main class="grid grid-cols-2 gap-4 text-center pb-10">
      {
        items.map(async (item) => (
          <a
            class={` border-gray-300 text-muted-foreground hover:text-white`}
            href={item.url}
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="">
              <img
                class="h-auto w-full object-contain aspect-video"
                src={item.imgSrc}
                alt={item.name}
              />
            </div>
            <strong class={`font-bold text-sm mt-2 block`}>{item.name}</strong>
          </a>
        ))
      }
    </main>
  </div>
</Layout>
