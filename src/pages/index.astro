---
import Header from "@/components/Header.astro";
import Me from "@/components/Me";
import config from "@/data/config";
import Layout from "@/layouts/Layout.astro";
import { cn } from "@/lib/utils";

const { links } = config;
---

<Layout
  title={config.head.title}
  description={config.head.description}
  image={config.head.image}
>
  <div class="page max-w-lg mx-auto px-10 md:px-0 antialiased">
    <Header />

    <div class="grid gap-12 max-w-sm mx-auto">
      <div class="text-center">
        <Me className="mx-auto w-32 h-32" />
        <div class="mb-2 mt-4 text-lg font-medium">@maykbrito</div>
        <p class="leading-tight text-muted-foreground">
          üöÄ CCO <a
            href="https://instagram.com/rocketseat"
            rel="noreferrer noopener"
            target="_blank">@rocketseat</a
          >.<br />
          ‚≠êÔ∏è Descomplicando a Programa√ß√£o WEB.<br />
          üí° Gosto de falar sobre hard e soft skills.<br />
        </p>
      </div>

      <main class="grid gap-2 text-center">
        {
          links.primary.map(async (link) => (
            <a
              class={cn(
                `border rounded border-gray-300 p-4 hover:bg-gray-100 dark:hover:bg-gray-800 dark:border-gray-800`,
                link.colors?.background,
              )}
              href={link.url}
              target="_blank"
            >
              <strong class={cn(`font-bold text-lg`, link.colors?.title)}>
                {link.title}
              </strong>
              <p
                class={cn("text-muted-foreground", link.colors?.description)}
                set:html={link.description}
              />
            </a>
          ))
        }
      </main>

      <footer
        class="flex flex-wrap gap-2 justify-center mb-20 max-w-[180px] mx-auto sm:max-w-max"
      >
        {
          links.social.map((link) => {
            const Icon = link.icon;
            return (
              <a class="border rounded-md p-3" href={link.url} target="_blank">
                {Icon && <Icon strokeWidth={1} />}
                <p class="sr-only">{link.title}</p>
              </a>
            );
          })
        }
      </footer>
    </div>
  </div>
</Layout>
